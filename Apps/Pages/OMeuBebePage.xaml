                                        <RowDefinition Height="190"></RowDefinition>
                                        <RowDefinition Height="190"></RowDefinition>
                                    </Grid.RowDefinitions>

                                    <Frame CornerRadius="10" IsClippedToBounds="True" Grid.Row="0" VerticalOptions="FillAndExpand" BackgroundColor="#F5F5F5" Padding="10">
